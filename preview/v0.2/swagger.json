{
  "swagger": "2.0",
  "info": {
    "version": "0.2",
    "title": "vMix REST API"
  },
  "host": "localhost:3000",
  "tags": [
    {
      "name": "input",
      "description": "Different sources that can be loaded into vMix"
    },
    {
      "name": "overlay",
      "description": "A container for an input that can be displayed on top of other inputs"
    },
    {
      "name": "transition",
      "description": "A preset for changing from one input to another"
    },
    {
      "name": "vmix",
      "description": "Version information about vMix"
    },
    {
      "name": "status",
      "description": "High-level state information about the vMix environment"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/inputs": {
      "get": {
        "tags": [
          "input"
        ],
        "summary": "Retrieve a list of inputs",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list of inputs was retrieved successfully",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Input"
              }
            },
            "examples": {
              "application/json": [
                {
                  "inputId": 1,
                  "type": "Xaml",
                  "title": "NewsHD2.xaml",
                  "state": "Paused",
                  "position": 0,
                  "duration": 0,
                  "loop": false,
                  "isActive": false,
                  "isPreview": false
                },
                {
                  "inputId": 2,
                  "type": "Xaml",
                  "title": "TimerClock.xaml",
                  "state": "Paused",
                  "position": 0,
                  "duration": 0,
                  "loop": false,
                  "isActive": false,
                  "isPreview": true
                }
              ]
            }
          },
          "501": {
            "description": "Unable to connect to vMix"
          }
        }
      }
    },
    "/inputs/{inputId}": {
      "get": {
        "tags": [
          "input"
        ],
        "summary": "Retrieve a specific input",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "inputId",
            "in": "path",
            "description": "ID of input to return",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "A specific input was retrieved successfully",
            "schema": {
              "$ref": "#/definitions/Input"
            },
            "examples": {
              "application/json": {
                "inputId": 1,
                "type": "Xaml",
                "title": "NewsHD2.xaml",
                "state": "Paused",
                "position": 0,
                "duration": 0,
                "loop": false,
                "isActive": false,
                "isPreview": false
              }
            }
          },
          "501": {
            "description": "Unable to connect to vMix"
          }
        }
      },
      "put": {
        "tags": [
          "input"
        ],
        "summary": "Update a specific input",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "inputId",
            "in": "path",
            "description": "ID of input to update",
            "required": true,
            "type": "integer"
          },
          {
            "name": "isActive",
            "in": "query",
            "description": "Use `true` to set this input as active; use `false` to put this input in the preview and make the input currently in the preview active.",
            "required": false,
            "type": "string"
          },
          {
            "name": "transitionEffect",
            "in": "query",
            "description": "Optional transition effect. Only applies if `isActive` is set and causing the currently active input to change visibility. Use one of the following values: `Fade`, `Zoom`, `Wipe`, `Slide`, `Fly`, `CrossZoom`, `FlyRotate`, `Cube`, `CubeZoom`, `VerticalWipe`, `VerticalSlide`, `Merge`, `WipeReverse`, `SlideReverse`, `VerticalWipeReverse`, `VerticalSlideReverse`, `Cut`.",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "A specific input was updated successfully",
            "schema": {
              "$ref": "#/definitions/Input"
            },
            "examples": {
              "application/json": {
                "inputId": 1,
                "type": "Xaml",
                "title": "NewsHD2.xaml",
                "state": "Paused",
                "position": 0,
                "duration": 0,
                "loop": false,
                "isActive": false,
                "isPreview": false
              }
            }
          },
          "501": {
            "description": "Unable to connect to vMix"
          }
        }
      }
    },
    "/inputs/active": {
      "get": {
        "tags": [
          "input"
        ],
        "summary": "Retrieve the active input",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "The input was retrieved successfully",
            "schema": {
              "$ref": "#/definitions/Input"
            },
            "examples": {
              "application/json": {
                "inputId": 2,
                "type": "Xaml",
                "title": "NewsHD2.xaml",
                "state": "Paused",
                "position": 0,
                "duration": 0,
                "loop": false,
                "isActive": true,
                "isPreview": false
              }
            }
          },
          "204": {
            "description": "No active input found"
          },
          "501": {
            "description": "Unable to connect to vMix"
          }
        }
      }
    },
    "/inputs/preview": {
      "get": {
        "tags": [
          "input"
        ],
        "summary": "Retrieve the input currently in preview",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "The input was retrieved successfully",
            "schema": {
              "$ref": "#/definitions/Input"
            },
            "examples": {
              "application/json": {
                "inputId": 1,
                "type": "Xaml",
                "title": "NewsHD2.xaml",
                "state": "Paused",
                "position": 0,
                "duration": 0,
                "loop": false,
                "isActive": false,
                "isPreview": true
              }
            }
          },
          "204": {
            "description": "No preview input found"
          },
          "501": {
            "description": "Unable to connect to vMix"
          }
        }
      }
    },
    "/overlays": {
      "get": {
        "tags": [
          "overlay"
        ],
        "summary": "Retrieve a list of overlays",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list of overlays was retrieved successfully",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Overlay"
              }
            },
            "examples": {
              "application/json": [
                {
                  "overlayId": 1,
                  "inputId": null
                },
                {
                  "overlayId": 2,
                  "inputId": 1
                },
                {
                  "overlayId": 3,
                  "inputId": null
                },
                {
                  "overlayId": 4,
                  "inputId": null
                }
              ]
            }
          },
          "501": {
            "description": "Unable to connect to vMix"
          }
        }
      }
    },
    "/overlays/{overlayId}": {
      "get": {
        "tags": [
          "overlay"
        ],
        "summary": "Retrieve a specific overlay",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "overlayId",
            "in": "path",
            "description": "ID of overlay to return",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "A specific overlay was retrieved successfully",
            "schema": {
              "$ref": "#/definitions/Overlay"
            },
            "examples": {
              "application/json": {
                "overlayId": 2,
                "inputId": 1
              }
            }
          },
          "501": {
            "description": "Unable to connect to vMix"
          }
        }
      }
    },
    "/transitions": {
      "get": {
        "tags": [
          "transition"
        ],
        "summary": "Retrieve a list of transitions",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "A list of transitions was retrieved successfully",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Transition"
              }
            },
            "examples": {
              "application/json": [
                {
                  "transitionId": 1,
                  "effect": "Fade",
                  "duration": 500
                },
                {
                  "transitionId": 2,
                  "effect": "Merge",
                  "duration": 1000
                }
              ]
            }
          },
          "501": {
            "description": "Unable to connect to vMix"
          }
        }
      }
    },
    "/transitions/{transitionId}": {
      "get": {
        "tags": [
          "transition"
        ],
        "summary": "Retrieve a specific transition",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "transitionId",
            "in": "path",
            "description": "ID of transition to return",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "A specific transition was retrieved successfully",
            "schema": {
              "$ref": "#/definitions/Transition"
            },
            "examples": {
              "application/json": {
                "transitionId": 1,
                "effect": "Fade",
                "duration": 500
              }
            }
          },
          "501": {
            "description": "Unable to connect to vMix"
          }
        }
      }
    },
    "/vmix": {
      "get": {
        "tags": [
          "vmix"
        ],
        "summary": "Get vMix version information",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Version information was retrieved successfully",
            "schema": {
              "$ref": "#/definitions/vmix"
            },
            "examples": {
              "application/json": {
                "version": "19.0.0.54",
                "edition": "Basic HD"
              }
            }
          },
          "501": {
            "description": "vMix is not running"
          }
        }
      }
    },
    "/status": {
      "get": {
        "tags": [
          "status"
        ],
        "summary": "Get high-level state information about the vMix environment",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "State information was retrieved successfully",
            "schema": {
              "$ref": "#/definitions/status"
            },
            "examples": {
              "application/json": {
                "fadeToBlack": false,
                "recording": false,
                "external": false,
                "streaming": false,
                "playlistActive": false,
                "multiCorder": false,
                "fullscreen": false
              }
            }
          },
          "501": {
            "description": "vMix is not running"
          }
        }
      }
    }
  },
  "definitions": {
    "vmix": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "edition": {
          "type": "string"
        }
      }
    },
    "status": {
      "type": "object",
      "properties": {
        "fadeToBlack": {
          "type": "boolean"
        },
        "recording": {
          "type": "boolean"
        },
        "external": {
          "type": "boolean"
        },
        "streaming": {
          "type": "boolean"
        },
        "playlistActive": {
          "type": "boolean"
        },
        "multiCorder": {
          "type": "boolean"
        },
        "fullscreen": {
          "type": "boolean"
        }
      }
    },
    "Input": {
      "type": "object",
      "properties": {
        "inputId": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "position": {
          "type": "integer"
        },
        "duration": {
          "type": "integer"
        },
        "loop": {
          "type": "boolean",
          "default": false
        },
        "isActive": {
          "type": "boolean",
          "default": false
        },
        "isPreview": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "Overlay": {
      "type": "object",
      "properties": {
        "overlayId": {
          "type": "integer"
        },
        "inputId": {
          "type": "integer"
        }
      }
    },
    "Transition": {
      "type": "object",
      "properties": {
        "transitionId": {
          "type": "integer"
        },
        "effect": {
          "type": "string"
        },
        "duration": {
          "type": "integer"
        }
      },
      "xml": {
        "name": "Input"
      }
    }
  }
}
